{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Liste des utilisateurs{% endblock %}

{% set menu_user = true %}

{% block body %}
    <section class="content-header">
        <h1>Liste des étudiants</h1>
    </section>

    <section class="content">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="callout callout-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="callout callout-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('user_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajout utilisateur</a><br><br>
                <div class="box">
                    <div class="box-body">
                        <div id="example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="id-list-user" class="table table-bordered dataTable">
                                        <thead>
                                        <tr role="row">
                                            <th>Photo</th>
                                            <th>Nom</th>
                                            <th>Emal</th>
                                            <th>Adresse</th>
                                            <th>Date d'inscription</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for user in users %}
                                            <tr role="row">
                                                <td>
                                                    {% set photo_profil = user.photo %}
                                                    {% if photo_profil is null or not file_exists(web_path ~ photo_profil) %}
                                                        {% set photo_profil = asset('img/profile.png') %}
                                                    {% endif %}
                                                    <img src="{{ photo_profil|imagine_filter('profile_identity') }}" alt="">
                                                </td>
                                                <td>{{ user.firstname }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.address }}</td>
                                                <td>{{ user.dateCreate }}</td>
                                                <td>
                                                    <a href="#" data-toggle="tooltip" data-placement="top" title="Voir">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('user_edit', {'id': user.id}) }}" data-toggle="tooltip"
                                                       data-placement="top" title="Modifier">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="#" data-toggle="tooltip" data-placement="top" title="Supprimer"
                                                       class="kl-remove-elt">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-user').DataTable({
                "aaSorting": [],
                "bProcessing": true,
                "bFilter": true,
                // "bPaginate": false,
                "bInfo": true,
                "lengthChange": true,
                "oLanguage": {
                    "sProcessing": '<i class="fa fa-spinner fa-pulse fa-fw"></i>',
                    "sSearch": "Filtrer: ",
                    "sLengthMenu": "Afficher _MENU_ enregistrement par page",
                    "sEmptyTable": "Aucun enregistrement trouvé",
                    "sInfo": "Voir _TOTAL_ de _PAGE_ pour _PAGES_ entrée",
                }
            });
        });
    </script>
{% endblock %}
