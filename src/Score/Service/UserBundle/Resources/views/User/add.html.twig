            <div class="col-xs-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Ajout utilisateur</h3>
                    </div>
                    {{ form_start(form) }}
                    <div class="box-body">
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.address) }}
                        {{ form_row(form.phone) }}
                        {{ form_row(form.email) }}
