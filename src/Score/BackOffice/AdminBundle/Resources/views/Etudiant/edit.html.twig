{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Modification étudiant{% endblock %}

{% set menu_etudiant = true %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Modification étudiant</h3>
                    </div>
                    {{ form_start(edit_form) }}
                    <div class="box-body">
                        {{ form_row(edit_form.niveau) }}
                        {{ form_row(edit_form.nom) }}
                        {{ form_row(edit_form.email) }}
                        {{ form_row(edit_form.adresse) }}
                        {{ form_row(edit_form.sexe) }}
                        <div class="form-group">
                            <label>{{ form_label(edit_form.annee) }}</label>
                            <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                                {{ form_widget(edit_form.annee, {
                                    'class': 'form-control datetimepicker-input',
                                    'data-target': '#datetimepicker1'
                                })
                                }}
                                <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>

                        <div class="box-footer">
                            <input type="submit" class="btn btn-primary" name="update_etudiant" value="Envoyer"/>
                            <a href="{{ path('etudiant_index') }}" class="btn btn-default" >
                                Retour à la liste
                            </a>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'YYYY',
                // language: 'fr'
            });
        });
    </script>
{% endblock %}
