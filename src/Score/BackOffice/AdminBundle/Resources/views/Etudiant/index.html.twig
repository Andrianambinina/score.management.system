{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Liste des étudiants {% endblock %}

{% set menu_etudiant = true %}

{% block body %}
    <section class="content-header">
        <h1>Liste des étudiants</h1>
    </section>

    <section class="content">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="callout callout-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="callout callout-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('etudiant_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajout étudiant</a><br><br>
                <div class="box">
                    <div class="box-body">
                        <div id="example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="id-list-student" class="table table-bordered dataTable">
                                        <thead>
                                        <tr role="row">
                                            <th>Nom</th>
                                            <th>Adresse</th>
                                        </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-student').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ path('etudiant_list_ajax') }}",
                    "type": 'POST'
                },
                "columnDefs": [
                    {"name": "nom", "targets": 0},
                    {"name": "adresse", "targets": 1},
                ],
                "paging": true,
                "info": true,
                "searching": true,
                "pageLength": 10,
                "order": [[0, 'ASC']]
            });
        });
    </script>
{% endblock %}
