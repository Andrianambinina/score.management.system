{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Liste des étudiants {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="w-100 d-flex flex-column flex-md-row justify-content-between">
                <div class="d-inline-flex mb-4 align-items-center justify-content-between justify-content-md-start">
                    <h3 class="mr-3">Liste des etudiants</h3>
                    <a href="{{ path('etudiant_new') }}" class="btn btn-primary">Ajout étudiant</a>
                </div>
            </div>

            <div class="box">
                <div class="box-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="id-list-student" class="table dataTable">
                                    <thead>
                                    <tr role="row">
                                        <th>Nom</th>
                                        <th>Adresse</th>
                                        <th>Niveau</th>
                                        <th>Année</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for etudiant in etudiants %}
                                        <tr role="row">
                                            <td>{{ etudiant.nom }}</td>
                                            <td>{{ etudiant.adresse }}</td>
                                            <td>{{ etudiant.niveau }}</td>
                                            <td>{{ etudiant.annee|date('Y') }}</td>
                                            <td>
                                                <a href="#" class="mr-2"><i class="fa fa-edit"></i></a>
                                                <a href="#" class="mr-2"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-student').DataTable({
                "aaSorting": [],
                "bProcessing": true,
                "bFilter": true,
                // "bPaginate": false,
                "bInfo": false,
                "oLanguage": {
                    "sProcessing": '<i class="fa fa-spinner fa-pulse fa-fw"></i>',
                    "sSearch": "Filtrer: ",
                    "sLengthMenu": "Afficher _MENU_ enregistrement par page",
                    "sEmptyTable": "Aucun enregistrement trouvé",
                    "sInfo": "Voir _TOTAL_ de _PAGE_ pour _PAGES_ entrée",
                }
            });
        });
    </script>
{% endblock %}
