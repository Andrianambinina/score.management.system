{% extends "backoffice/base_admin.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="mb-5">
                <a href="{{ path('etudiant_new') }}" class="btn btn-primary">Ajout étudiant</a>
            </div>
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Liste des etudiants</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="id-list-student" class="table">
                                    <thead>
                                    <tr role="row">
                                        <th>Nom</th>
                                        <th>Adresse</th>
                                        <th>Niveau</th>
                                        <th>Année</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for etudiant in etudiants %}
                                        <tr>
                                            <td>{{ etudiant.nom }}</td>
                                            <td>{{ etudiant.adresse }}</td>
                                            <td>{{ etudiant.niveau }}</td>
                                            <td>{{ etudiant.annee|date('Y') }}</td>
                                            <td>
                                                <a href="#"><i class="fa fa-edit"></i></a>
                                                <a href="#"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-student').DataTable({
                "aaSorting": [],
                "bProcessing": true,
                "bFilter": true,
                "oLanguage": {
                    "sProcessing": '<i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>',
                    "sSearch": "Filtrer: ",
                    "sLengthMenu": "Afficher _MENU_ enregistrement par page",
                    "sEmptyTable": "Aucun enregistrement trouvé",
                    "sInfo": "Voir _TOTAL_ de _PAGE_ pour _PAGES_ entrée",
                }
            });
        });
    </script>
{% endblock %}
