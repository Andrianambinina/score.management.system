{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Liste des matières{% endblock %}

{% set menu_matiere = true %}

{% block body %}
    <section class="content-header">
        <h1>Liste des matières</h1>
    </section>

    <section class="content">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="callout callout-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="callout callout-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('matiere_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajout matière</a><br><br>
                <div class="box">
                    <div class="box-body">
                        <div id="example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="id-list-matters" class="table table-bordered dataTable">
                                        <thead>
                                        <tr role="row">
                                            <th>Libelle</th>
                                            <th>Coefficient</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for matiere in matieres %}
                                            <tr role="row">
                                                <td>{{ matiere.libelle }}</td>
                                                <td>{{ matiere.coefficient }}</td>
                                                <td>
                                                    <a href="{{ path('matiere_edit', { 'id': matiere.id }) }}"
                                                       data-toggle="tooltip" data-placement="top" title="Modifier">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('matiere_delete', { 'id': matiere.id }) }}"
                                                       data-toggle="tooltip" data-placement="top" title="Supprimer"
                                                       class="kl-remove-elt">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-matters').DataTable({
                "aaSorting": [],
                "bProcessing": true,
                "bFilter": true,
                // "bPaginate": false,
                "bInfo": true,
                "lengthChange": true,
                "oLanguage": {
                    "sProcessing": '<i class="fa fa-spinner fa-pulse fa-fw"></i>',
                    "sSearch": "Filtrer: ",
                    "sLengthMenu": "Afficher _MENU_ enregistrement par page",
                    "sEmptyTable": "Aucun enregistrement trouvé",
                    "sInfo": "Voir _TOTAL_ de _PAGE_ pour _PAGES_ entrée",
                }
            });
        });
    </script>
{% endblock %}
