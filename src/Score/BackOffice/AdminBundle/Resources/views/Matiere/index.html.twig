{% extends "backoffice/base_admin.html.twig" %}

{% block title %}{{ parent() }} Liste des matières{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="callout callout-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="callout callout-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="w-100 d-flex flex-column flex-md-row justify-content-between">
                <div class="d-inline-flex mb-4 align-items-center justify-content-between justify-content-md-start">
                    <h3 class="mr-3">Liste des matières</h3>
                    <a href="{{ path('matiere_new') }}" class="btn btn-primary">Ajout matière</a>
                </div>
            </div>

            <div class="box">
                <div class="box-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="id-list-matters" class="table dataTable">
                                    <thead>
                                    <tr role="row">
                                        <th>Libelle</th>
                                        <th>Coefficient</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for matiere in matieres %}
                                        <tr role="row">
                                            <td>{{ matiere.libelle }}</td>
                                            <td>{{ matiere.coefficient }}</td>
                                            <td>
                                                <a href="{{ path('matiere_edit', { 'id': matiere.id }) }}"
                                                   class="mr-2"><i class="fa fa-edit"></i></a>
                                                <a href="{{ path('matiere_delete', { 'id': matiere.id }) }}"
                                                   class="mr-2 kl-remove-elt"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#id-list-matters').DataTable({
                "aaSorting": [],
                "bProcessing": true,
                "bFilter": true,
                // "bPaginate": false,
                "bInfo": false,
                "lengthChange": false,
                "oLanguage": {
                    "sProcessing": '<i class="fa fa-spinner fa-pulse fa-fw"></i>',
                    "sSearch": "Filtrer: ",
                    "sLengthMenu": "Afficher _MENU_ enregistrement par page",
                    "sEmptyTable": "Aucun enregistrement trouvé",
                    "sInfo": "Voir _TOTAL_ de _PAGE_ pour _PAGES_ entrée",
                }
            });
        });
    </script>
{% endblock %}
